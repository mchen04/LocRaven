# Cloudflare Pages Headers Configuration
# Aggressive caching strategy for AI-optimized business profiles

# Geographic Business Pages - Optimized for AI discovery
/*/
  Cache-Control: public, max-age=604800, s-maxage=604800, stale-while-revalidate=2592000
  Vary: Accept-Encoding
  X-Content-Type: geographic-business-profile
  X-Cache-Strategy: geographic-optimized

# API Routes - No caching for dynamic operations  
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Static Assets - Long-term caching
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable
  
# Images and Media - Extended caching  
/*.jpg
  Cache-Control: public, max-age=2592000
  
/*.png
  Cache-Control: public, max-age=2592000
  
/*.svg
  Cache-Control: public, max-age=2592000
  
/*.webp
  Cache-Control: public, max-age=2592000

# Security Headers - Apply to all pages
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
# Dashboard and Dynamic Pages - Short cache
/dashboard
  Cache-Control: private, no-cache, no-store, must-revalidate

/chat  
  Cache-Control: private, no-cache, no-store, must-revalidate

# Auth Pages - No caching
/login
  Cache-Control: no-cache, no-store, must-revalidate
  
/auth/*
  Cache-Control: no-cache, no-store, must-revalidate