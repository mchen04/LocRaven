# IMPORTANT: Copy this file to .env and fill in your actual values
# Never commit .env files with real credentials to version control

# Supabase Configuration (NEXT_PUBLIC_ prefix required for client access)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Server-only Supabase Configuration (not exposed to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DB_PASSWORD=your-db-password-here

# Application Configuration
NEXT_PUBLIC_APP_NAME=LocRaven
NEXT_PUBLIC_APP_TAGLINE=AI-Discoverable Business Updates in 60 Seconds

# Environment URLs (will be auto-detected based on NODE_ENV)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres.your-project:password@aws-0-region.pooler.supabase.com:6543/postgres
DATABASE_HOST=db.your-project.supabase.co
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USER=postgres.your-project
DATABASE_PASSWORD=your-db-password

# Direct connection (for migrations)
DIRECT_URL=postgresql://postgres.your-project:password@db.your-project.supabase.co:5432/postgres

# AI Configuration
# GEMINI_API_KEY is now stored as a Supabase Edge Function secret
# Set it in Supabase Dashboard > Edge Functions > Secrets

# Feature Flags
ENABLE_PREVIEW_MODE=true
ENABLE_CITATION_TESTING=true

# Rate Limiting
MAX_UPDATES_PER_HOUR=10
MAX_PAGES_PER_BUSINESS=100

# Content Generation Settings
AI_GENERATION_TIMEOUT=60000
MAX_RETRIES=3
PAGES_PER_UPDATE=5

# Stripe Configuration
# Get these from your Stripe Dashboard
# Test keys: https://dashboard.stripe.com/test/apikeys  
# Live keys: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_or_sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_WEBHOOK_SECRET_LOCAL=whsec_your_local_webhook_secret_here